{
  "$schema": "http://json.schemastore.org/template",
  "author": "noelex@outlook.jp",
  "classifications": [ "Common", "Library" ],
  "identity": "Rcl.NET.Templates.MessageLibrary",
  "name": "ROS 2 Message Library",
  "shortName": "ros2-msg",
  "defaultName": "MessageLibrary1",
  "sourceName": "Company.MessageLibrary1",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "primaryOutputs": [
    {
      "path": "Company.MessageLibrary1.csproj"
    }
  ],
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false",
      "displayName": "Skip restore"
    }
  },
  "postActions": [
    {
      "id": "restore",
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "id": "tools-restore",
      "condition": "(!skipRestore)",
      "description": "Restore .NET tools required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet tool restore'"
        }
      ],
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "continueOnError": true,
      "args": {
        "executable": "dotnet",
        "args": "tool restore",
        "redirectStandardError": false,
        "redirectStandardOutput": false
      }
    }
  ]
}